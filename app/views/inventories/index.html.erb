<p id="notice"><%= notice %></p>

<h1>Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Item</th>
      <th>Inventory type</th>
      <th>Cost price</th>
      <th>Quantity</th>
      <th>Selling price</th>
      <th>Sold for</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.date %></td>
        <td><%= inventory.item %></td>
        <td><%= inventory.inventory_type %></td>
        <td><%= inventory.cost_price %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.selling_price %></td>
        <td><%= inventory.sold_for %></td>
        <td><%= inventory.status %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

