<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-12">
            <div class="p-mobile">
              <%= form_with(model: subscription, local: true, class:"user") do |form| %>
                <%= form.text_field :customer_id, type: 'hidden' %>
                <% if subscription.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

                    <ul>
                    <% subscription.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <%= form.label :plan_id, "Select a Membership Plan", class:"mb-2 ml-3 text-gray-800" %>
                    <%= form.select :plan_id, options_for_select(Plan.all.map{|plan| [plan.membership_type, plan.id]}, subscription.plan.try(&:id)), {include_blank: true}, class: 'form-control form-control-lg form-control-user' %>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :receipt_number, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.text_field :receipt_number, id: :subscription_receipt_number, class:"form-control form-control-user"%>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :mode_of_payment, class:"mb-2 ml-3 text-gray-800" %>
                    <%= form.select :mode_of_payment, options_for_select(Subscription::MODE_OF_PAYMENTS, subscription.mode_of_payment), {include_blank: true}, class: 'form-control form-control-lg form-control-user' %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <%= form.label :amount_paid, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.text_field :amount_paid, id: :subscription_amount_paid, class:"form-control form-control-user" %>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :discount, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.text_field :discount, id: :subscription_discount, class:"form-control form-control-user" %>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :balance, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.text_field :balance, id: :subscription_balance, class:"form-control form-control-user" %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <%= form.label :start_date, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.date_field :start_date, id: :subscription_start_date, class:"form-control form-control-user" %>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :end_date, class:"mb-0 ml-3 text-gray-800" %>
                    <%= form.date_field :end_date, id: :subscription_end_date, class:"form-control form-control-user" %>
                  </div>

                  <div class="col-sm-4">
                    <%= form.label :status, class:"mb-2 ml-3 text-gray-800" %>
                    <%= form.select :status, options_for_select(Subscription.statuses.keys, subscription.status), {include_blank: true}, class: 'form-control form-control-lg form-control-user' %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :notes, class:"mb-0 ml-3 text-gray-800" %>
                  <%= form.text_field :notes, id: :subscription_notes, class:"form-control form-control-user" %>
                </div>
                <hr>
                <div>
                  <%= form.submit class:"btn btn-primary btn-user btn-block" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

