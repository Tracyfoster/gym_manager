<div class="container">
  <%= render "shared/flash"%>
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5 shadow">
        <div class="card-body">
            <h1 class="card-title text-center h3 mb-3 text-gray-800">Sign In</h1>

          <%= form_for(:session, url: signin_path, html: {class: "user"}) do |f| %>
            <div class="form-group">
              <%= f.label :username, class:"mb-0 ml-3 text-gray-800" %>
              <%= f.text_field :username, class: 'form-control form-control-user', placeholder: 'Your Username', required: true, autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.label :password, class:"mb-0 ml-3 text-gray-800" %>
              <%= f.password_field :password, class: 'form-control form-control-user', placeholder: 'Password', required: true %>
            </div>

            <div class="custom-control custom-checkbox mb-3 ml-3">
              <%= f.check_box :remember_me, class: 'custom-control-input' %>
              <%= f.label :remember_me, class: 'custom-control-label' %>
            </div>
            <hr class="my-4">
            
            <%= f.submit "Sign in", class: "btn btn-primary btn-user btn-block text-uppercase" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
