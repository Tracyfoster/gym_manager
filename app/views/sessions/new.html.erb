<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>

          <%= form_for(:session, url: signin_path, html: {class: "form-signin"}) do |f| %>
            <div class="form-label-group">
              <%= f.text_field :username, class: 'form-control', placeholder: 'Your Username', required: true, autofocus: true %>
              <%= f.label :username %>
            </div>

            <div class="form-label-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
              <%= f.label :password %>
            </div>

            <div class="custom-control custom-checkbox mb-3">
              <%= f.check_box :remember_me, class: 'custom-control-input' %>
              <%= f.label :remember_me, class: 'custom-control-label' %>
            </div>
            <hr class="my-4">
            
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>