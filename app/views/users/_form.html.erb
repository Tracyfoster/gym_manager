<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if user.avatar? %>
    <div class="image-wrapper">
      <%= image_tag(user.avatar.thumb) %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :user_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :user_last_name %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.text_field :role, id: :user_role %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation %>
  </div>
  <div class="col-4 mb-2 custom-file">
    <%= form.file_field :avatar, id: :user_avatar, class: "custom-file-input" %>
    <%= form.label :avatar, 'Choose file', class:"custom-file-label" %>
  </div>

  <% if user.avatar? %>
    <div class="custom-control custom-checkbox mb-3">
      <%= form.check_box :remove_avatar, class: 'custom-control-input' %>
      <%= form.label :remove_avatar, "Remove Picture", class: 'custom-control-label' %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
