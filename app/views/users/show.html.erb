
<% if @user.avatar? %>
  <div class="image-wrapper">
    <%= image_tag(@user.avatar, alt: @user.full_name) %>
  </div>
<% end %>

<p>
  <strong>Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
