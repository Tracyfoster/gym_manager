<div class="d-sm-flex align-items-center justify-content-between">
  <h1 class="h3 mb-0 text-gray-800">Attendances</h1>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th>Subscription Period</th>
            <th>Date Attended</th>
            <th>Checked-in By</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @attendances.each do |attend| %>
            <tr>
              <td><%= attend.customer.full_name %></td>
              <td><%= attend.customer.active_membership_plan %></td>
              <td><%= attend.customer.sub_period %></td>
              <td><%= attend.date_attended %></td>
              <td><%= attend.user.full_name %></td>
              <td><%= link_to 'Edit', edit_attendance_path(attend) %> |
                  <%= link_to 'Delete', attend, method: :delete, data: { confirm: 'Are you sure?' } %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
